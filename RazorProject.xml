<RazorProject>

    <Project>
        <Name>Ebpf</Name>
        <Version>1</Version>
        <Type>StaticLibrary</Type>
    </Project>

    <Compiler>
        <Sources>
            <Source value="dummy.cpp" />
        </Sources>
        <IncludeDirectories />
    </Compiler>
    <CustomCommands>
        <CustomCommand type="Output">
            <When>PostBuild</When>
            <Output>
                    dummy.o
            </Output>
            <Commands>
                 <Command>./contrib/build_libelf.sh</Command>
                 <Command>make -C GPL/HostIsolation/TcFilter</Command>
                 <Command>make -C non-GPL/HostIsolationMapsUtil</Command>
                 <Command>make -C non-GPL/HostIsolation/KprobeConnectHook</Command>
                 <Command>touch dummy.cpp</Command>
            </Commands>
            <WorkingDirectory>%(ProjectRoot)</WorkingDirectory>
            <Comment>Building eBPF</Comment>
        </CustomCommand>
    </CustomCommands>
</RazorProject>
